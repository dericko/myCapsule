<h1>I'm a little Notes#index page</h1>
<p>Find me in app/views/notes/index.html.erb</p>

<br>
<%= link_to "Home", root_path %>
<%= link_to "Add Note", new_note_path %>
<br>

<table>
	<tr>
		<td>title</td>
		<td>body</td>
		<td>timer</td>
		<td>user</td>
	</tr>
	<% @notes.each do |note| %>
	<tr>
		<td><%= link_to note.title, note_path(note.id)%></td>
		<td><%= note.body %></td>
		<td><%= note.timer %></td>
		<td><%= note.user.name %></td>
		<td><%= link_to "Edit", edit_note_path(note.id) %></td>
		<td><%= link_to "Delete", note, confirm: "Are you sure you want to delete this note?", method: :delete %>
	</tr>
	<% end %>
</table>
