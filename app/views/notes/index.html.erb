<h2>Notes</h2>

<table id="note-table">
	<tr>
		<td>Title</td>
		<td>Body</td>
		<td>Timer</td>
		<td>User</td>
	</tr>
	<% @notes.each do |note| %>
	<tr>
		<td><%= link_to note.title, note_path(note.id) %></td>
		<td><%= note.body %></td>
		<td><%= note.timer %> min </td>
		<td><%= link_to note.user.name, user_path(note.user.id) %></td>
		<td><%= link_to "Edit", edit_note_path(note.id) %></td>
		<td><%= link_to "Delete", note, confirm: "Are you sure you want to delete this note?", method: :delete %>
	</tr>
	<% end %>
</table>
